html, body {
    min-height: 100%;
}

body
  padding 20px
  //height: 100vh
  //width: 100%
  font-family -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif
  background: linear-gradient(to left top, #e66465, #9198e5);
  // background-color white
  //color #47525E

.container
    height 100%
    padding: 10px 0px
    display grid !important
    grid-template-columns 1fr 1fr !important

.center  {
  margin: auto;
  width: 80%;
  //border: 3px solid #73AD21;
  padding: 10px;
  position: absolute;
  transform: translate(-50%,-50%);
  top: 50%;
  left: 50%;
}

h2 {
  text-align: center
}

h4 {
  text-align: center
  padding-bottom: 0px
  margin: 1px 0px
}

a {
  padding-bottom: 10px
}

.App
  display grid
  grid-template-columns repeat(3, 1fr)
  grid-column-gap 10px
  grid-row-gap 10px 
  
section
  padding 10px
  margin 10px 0px
  background-color #BDF1D4
  border-radius 10px

form {
   margin: auto;
  
  display: grid;
  grid-template-columns: 1fr;
  background: $white;
  padding: 3em;
  //height: 320px;
  width: 50%
  border-radius: 20px;
  border-left: 1px solid $white;
  border-top: 1px solid $white;
  backdrop-filter: blur(10px);
  box-shadow: 20px 20px 40px -6px rgba(0,0,0,0.2);
  text-align: center;

  position: relative;
  transition: all 0.2s ease-in-out;
  
  button{
    margin: auto;
    background: #9198e5;
    //color: #ffffff
    //width: 100px;
    //width: calc(100% - 200px);
    padding: 1em;
    margin-bottom: 2em;
    border: 1px solid #0b0b0b00;
    border-left: 1px solid $white;
    border-top: 1px solid $white;
    border-radius: 5000px;
  }

button:hover {background-color: #e66465}

button:active {
  background-color: #e66465;
  box-shadow: 0 5px #666;
  transform: translateY(4px);
}

  input::file-selector-button {
    
    background: #9198e5;
    //font-weight: bold;
    //color: dodgerblue;
    //padding: 0.5em;
    height: 100%;
    width: 40%
    border: none;
    border-right: 1px solid #0b0b0b;
    border-radius: 3px;
}


